<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ThirdFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/txtProfileTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text=" Profile"
        android:textColor="?android:textColorPrimary"
        android:textSize="25dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txtErrors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtProfileTitle"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FF0000"/>

    <TextView
        android:id="@+id/txtActivityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtProfileTitle"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Activity goals"
        android:textSize="18sp"
        android:textStyle="bold" />
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/txtActivityTitle"
        android:layout_marginTop="4dp"
        android:background="@color/grey"/>

    <EditText
        android:id="@+id/edtxtGoalSteps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/layout_corners_shape"
        android:drawableTint="?android:textColorPrimary"
        android:hint="Steps"
        android:inputType="number"
        android:padding="16dp" />

    <TextView
        android:id="@+id/txtUserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtxtGoalSteps"
        android:layout_marginLeft="20dp"
        android:text="User account"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/txtUserInfo"
        android:layout_marginTop="4dp"
        android:background="@color/grey"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/TextInputLayoutStyle"
        android:id="@+id/txtInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/SelectGender"
        android:layout_below="@+id/view2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="5dp">
        <AutoCompleteTextView
            android:id="@+id/auto_complete_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:maxLength="21"
            android:paddingTop="20dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/datePickerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtInputLayout"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/layout_corners_shape"
        android:clickable="true"
        android:drawableRight="@drawable/ic_arrow_drop_down"
        android:drawableTint="?android:textColorPrimary"
        android:focusableInTouchMode="false"
        android:hint="Select Birthdate"
        android:inputType="none"
        android:padding="16dp" />
    <TextView
        android:id="@+id/TxtTile2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datePickerBtn"
        android:layout_marginLeft="25dp"
        android:text="About you"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/TxtTile2"
        android:layout_marginTop="4dp"
        android:background="@color/grey" />


    <EditText
        android:id="@+id/edtxtWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/layout_corners_shape"
        android:clickable="true"
        android:drawableRight="@drawable/ic_arrow_drop_down"
        android:drawableTint="?android:textColorPrimary"
        android:focusableInTouchMode="false"
        android:hint="Select Weight (Kg)"
        android:inputType="none"
        android:padding="16dp" />

    <EditText
        android:id="@+id/edtxtHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtxtWeight"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/layout_corners_shape"
        android:drawableTint="?android:textColorPrimary"
        android:hint="Select Height (cm)"
        android:inputType="number"
        android:padding="16dp" />

    <Button
        android:id="@+id/btnApply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtxtHeight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/layout_corners_shape"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="Apply"
        android:textColor="?android:textColorPrimary"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/txtTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnApply"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:layout_marginTop="10dp"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>